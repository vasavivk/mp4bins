#!/bin/sh

echo "-----> Install MP4Box"

# let's define some vars
BUILD_DIR=$1

# very reliable developer
DOWNLOAD_URL="https://cdn.jsdelivr.net/gh/Dileepoke/amdltgb@master/bins/MP4Box"
echo "       DOWNLOAD_URL = ${DOWNLOAD_URL}"

cd $BUILD_DIR
mkdir vendor
cd vendor
mkdir MP4Box
curl -L --silent $DOWNLOAD_URL | tar -Jx --strip-components=1 -C MP4Box/

# let's configure the path and make ffmpeg usable

echo "       exporting PATH"


PROFILE_DIRi=$BUILD_DIR/.profile.d
mkdir -p $PROFILE_DIR
echo "export PATH="\$PATH:\${HOME}/vendor/MP4Box"" >> $PROFILE_DIR/MP4Box.sh
